<nhapcode>
    BoxLayout:
        id:nh
        size: root.width*0.9, root.height*0.15
        pos:root.width*0.1, root.height*0.85
        row_default_height: 0
        padding: 0
        spacing: 0
        orientation: 'horizontal'
        size_hint:(1,1)
        TextInput:
            id:o1
            hint_text:'Nhập sdt'
            size_hint:(0.4,1)
            font_size: 25
        TextInput:
            id:o2
            hint_text :''
            size_hint:(0.4,1)
            font_size: 25
        Button:
            id:o3
            text :'->'
            size_hint:(0.2,1)
            font_size: 25
            on_press:root.connect_telegram()
<tele>
    BoxLayout:
        id:'login'
        size: root.width, root.height
        pos: root.pos
        row_default_height: 0
        padding: 5
        spacing: 10
        orientation: 'vertical'
        size_hint:(1,1)
        Label:
		    id:dangnhapthanhcong
	        text: "Đã đăng nhập"
		    size_hint:(1,0.07)
		    font_size: 25
		    background_color: (64/255,64/255,64/255, 0.8)
		    canvas.before:
		        Color:
			        rgba: self.background_color
			    Rectangle:
				    size: self.size
				    pos: self.pos
        BoxLayout:
		    id:nhantin
		    size_hint:(1,0.83)
		    font_size: 50
		    padding: 0
            spacing: 0
            orientation: 'horizontal'
		    background_color: (0,0.7, 0.6, 0.5)
		    canvas.before:
			    Color:
				    rgba: self.background_color
			    Rectangle:
				    size: self.size
				    pos: self.pos
			BoxLayout:
			    id:	 thietlap
			    font_size: 50
		        padding: 0
                spacing: 0
                orientation: 'vertical'
                BoxLayout:
                    id:chon
                    size_hint:(1,0.35)
                    orientation: 'horizontal'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint:(0.7,1)
                        spacing: 0.1
                        BoxLayout:
                            id:chotloi
                            padding: 0.5
                            orientation: 'horizontal'
                            Label:
                                size_hint:(0.6,1)
                                text:'Nhập chốt lời'
                                background_color: (92/255,92/255,92/255, 0.8)
		                        canvas.before:
		                            Color:
			                            rgba: self.background_color
			                        Rectangle:
				                        size: self.size
				                        pos: self.pos
                            TextInput:
                                size_hint:(0.4,1)
                                hint_text :'Mặc định:\n 1000.000'
                        BoxLayout:
                            id:chotlo
                            padding: 0.5
                            orientation: 'horizontal'
                            Label:
                                size_hint:(0.6,1)
                                text:'Nhập chốt lỗ'
                                background_color: (92/255,92/255,92/255, 0.8)
		                        canvas.before:
		                            Color:
			                            rgba: self.background_color
			                        Rectangle:
				                        size: self.size
				                        pos: self.pos
                            TextInput:
                                size_hint:(0.4,1)
                                hint_text :'Mặc định:\n 0'
                        BoxLayout:
                            id:muccuoc
                            padding: 0.5
                            orientation: 'horizontal'
                            Label:
                                size_hint:(0.6,1)
                                text:'Nhập mức cược'
                                background_color: (92/255,92/255,92/255, 0.8)
		                        canvas.before:
		                            Color:
			                            rgba: self.background_color
			                        Rectangle:
				                        size: self.size
				                        pos: self.pos
                            TextInput:
                                size_hint:(0.4,1)
                                hint_text :'Mặc định:\n 100'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint:(0.3,1)
                        Spinner:
		                    id: gapthep
		                    #size: root.width*0.4, root.height*0.05
		                    #pos: root.width*0.3, root.height*0.5
		                    text: 'Cách gấp thiếp'
		                    values: ['Gấp khi thắng', 'Gấp khi thua']
		                Spinner:
		                    id: congthuc
		                    #size: root.width*0.4, root.height*0.05
		                    #pos: root.width*0.3, root.height*0.5
		                    text: 'Công thức'
		                    values: ['cl', '2c1l','2l1c']
		        BoxLayout:
                    id:chon
                    size_hint:(1,0.65)
                    orientation: 'horizontal'

		Label:
		    id:time
		    text: "giờ hiện tại"
		    size_hint:(1,0.1)
		    font_size: 25
		    background_color: (0,0.1,0.1,0.1)
		    canvas.before:
			    Color:
				    rgba: self.background_color
			    Rectangle:
				    size: self.size
				    pos: self.pos

