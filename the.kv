<nhapcode>
    BoxLayout:
        id:nh
        size: root.width*0.9, root.height*0.15
        pos:root.width*0.1, root.height*0.85
        row_default_height: 0
        padding: 0
        spacing: 0
        orientation: 'horizontal'
        size_hint:(1,1)
        TextInput:
            id:o1
            hint_text:'Nhập sdt'
            size_hint:(0.4,1)
            font_size: 25
        TextInput:
            id:o2
            hint_text :''
            size_hint:(0.4,1)
            font_size: 25
        Button:
            id:o3
            text :'->'
            size_hint:(0.2,1)
            font_size: 25
            on_press:root.connect_telegram()
<tele>
    BoxLayout:
        id:'login'
        size: root.width, root.height
        pos: root.pos
        row_default_height: 0
        padding: 5
        spacing: 10
        orientation: 'vertical'
        size_hint:(1,0.15)
        Label:
		    id:'dangnhapthnhcong'
	        text: "Đã đăng nhập"
		    size_hint:(1,0.15)
		    font_size: 50
		    background_color: (0.6, 0.8, 0.5, 1)
		    canvas.before:
		        Color:
			        rgba: self.background_color
			    Rectangle:
				    size: self.size
				    pos: self.pos
        Label:
		    id:nhantin
		    text: "Đã đăng nhập"
		    size_hint:(1,0.75)
		    font_size: 50
		    background_color: (0,0.7, 0.6, 0.5)
		    canvas.before:
			    Color:
				    rgba: self.background_color
			    Rectangle:
				    size: self.size
				    pos: self.pos
		Label:
		    id:time
		    text: "giờ hiện tại"
		    size_hint:(1,0.1)
		    font_size: 25
		    background_color: (0,0.1,0.1,0.1)
		    canvas.before:
			    Color:
				    rgba: self.background_color
			    Rectangle:
				    size: self.size
				    pos: self.pos

